rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to item assets for authenticated users
    // This prevents unauthorized hotlinking while allowing app users to load images
    match /assets/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Assets should be uploaded through proper admin channels
    }

    // User-specific uploads (e.g., profile images, if implemented)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}